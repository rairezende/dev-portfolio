---
import { FileDown } from 'lucide-react'
import Card from '../Card.astro'
import { Button } from '../ui/button'

const PDF = '/Rai-Rezende-Software-Developer.pdf'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <header class="flex items-center">
      <h1 class="text-xl font-bold text-foreground text-special">
        Resume
      </h1>
    </header>
  <div class="mt-4 flex w-full justify-center">
    <div
      class="card card-compact md:w-112 lg:w-128 w-96 gap-2 border-[oklch(var(--p))] transition-all"
    >
      <figure>
        <object data={PDF} type="application/pdf" width="100%"></object>
      </figure>
      <div class="mt-4 flex flex-col gap-2">
        <p class="text-sm text-muted-foreground">
          View and download my resume
        </p>
        <div class="card-actions mt-2 flex w-full items-center justify-center">
          <a target="_blank" href={PDF}>
            <Button>
              <FileDown />
            </Button>
          </a>
        </div>
      </div>
    </div>
  </div>
</Card>
